<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/full_image_activity_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@color/cardview_dark_background"/>

    <ImageView
        android:id="@+id/full_image_activity_iv_close"
        android:layout_width="@dimen/close_icon_size"
        android:layout_height="@dimen/close_icon_size"
        android:scaleType="fitXY"
        android:background="@drawable/ic_highlight_off_black_24dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/full_image_activity_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_black"
        android:padding="@dimen/card_padding"
        android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/full_image_activity_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>